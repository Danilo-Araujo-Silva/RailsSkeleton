{
  "name": "rails_skeleton",
  "version": "0.0.1",
  "description": "A skeleton proposal to rails applications.",
  "main": "index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsc -p src/",
    "build:watch": "tsc -p src/ -w",
    "build:e2e": "tsc -p e2e/",
    "serve": "lite-server -c=bs-config.json",
    "serve:e2e": "lite-server -c=bs-config.e2e.json",
    "prestart": "npm run build",
    "start": "concurrently \"npm run build:watch\" \"npm run serve\"",
    "pree2e": "npm run build:e2e",
    "e2e": "concurrently \"npm run serve:e2e\" \"npm run protractor\" --kill-others --success first",
    "preprotractor": "webdriver-manager update",
    "protractor": "protractor protractor.config.js",
    "pretest": "npm run build",
    "test": "concurrently \"npm run build:watch\" \"karma start karma.conf.js\"",
    "pretest:once": "npm run build",
    "test:once": "karma start karma.conf.js --single-run",
    "lint": "tslint ./app/assets/javascripts/**/*.ts -t verbose"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Danilo-Araujo-Silva/RailsSkeleton.git"
  },
  "keywords": [
    "ruby",
    "rails",
    "ruby_on_rails",
    "rubyonrails",
    "skeleton",
    "npm",
    "typescript",
    "typescript-rails",
    "angular",
    "angular2"
  ],
  "author": "Danilo Ara√∫jo Silva",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Danilo-Araujo-Silva/RailsSkeleton/issues"
  },
  "homepage": "https://github.com/Danilo-Araujo-Silva/RailsSkeleton#readme",
  "dependencies": {
    "@types/node": "^7.0.5",
    "typescript": "^2.1.6",

    "@angular/common": "^2.4.0",
    "@angular/compiler": "^2.4.0",
    "@angular/core": "^2.4.0",
    "@angular/forms": "^2.4.0",
    "@angular/http": "^2.4.0",
    "@angular/platform-browser": "^2.4.0",
    "@angular/platform-browser-dynamic": "^2.4.0",
    "@angular/router": "^3.4.0",

    "angular-in-memory-web-api": "^0.2.4",
    "systemjs": "^0.19.40",
    "core-js": "^2.4.1",
    "rxjs": "^5.0.1",
    "zone.js": "^0.7.4"
  },
  "devDependencies": {
    "concurrently": "^3.2.0",
    "lite-server": "^2.2.2",

    "canonical-path": "^0.0.2",
    "tslint": "^3.15.1",
    "lodash": "^4.16.4",
    "jasmine-core": "^2.4.1",
    "karma": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-cli": "^1.0.1",
    "karma-jasmine": "^1.0.2",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~4.0.14",
    "rimraf": "^2.5.4",

    "@types/jasmine": "^2.5.36"
  }
}